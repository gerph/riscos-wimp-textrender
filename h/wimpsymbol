/*******************************************************************
 * File:        wimpsymbol
 * Purpose:     Translations of text from regular strings to use Wimp Symbol
 * Author:      Gerph
 * Date:        25 Jan 2026
 ******************************************************************/

#ifndef WIMPSYMBOL_H
#define WIMPSYMBOL_H

/* Characters to use for each of the symbols */
#define Symbol_Tick             (0x80)
#define Symbol_NotMaximised     (0x81)
#define Symbol_Maximised        (0x82)
#define Symbol_Resize           (0x83)
#define Symbol_Close            (0x84)
#define Symbol_Back             (0x85)
#define Symbol_Left             (0x88)
#define Symbol_Right            (0x89)
#define Symbol_Down             (0x8A)
#define Symbol_Up               (0x8B)
#define Symbol_Iconise          (0x98)

/*************************************************** Gerph *********
 Function:      wimpsymbol_free
 Description:   Free a WimpSymbol string that was allocated by wimpsymbol_convert
 Parameters:    symbolstring -> converted text
 Returns:       none
 ******************************************************************/
void wimpsymbol_free(const char *symbolstring);

/*************************************************** Gerph *********
 Function:      wimpsymbol_convert
 Description:   Convert a string to one using wimp symbols
 Parameters:    text-> the text string we are converting
 Returns:       pointer to a new string (or the same one) that we can use in FontManager.
 ******************************************************************/
const char *wimpsymbol_convert(const char *text,
                               int wimpsymbolfont,
                               int regularfont);

#endif
